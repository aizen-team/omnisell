# Database
DATABASE_URL=postgresql://postgres:password123@localhost:5432/myapp
POSTGRES_DB=myapp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password123

# Redis
REDIS_URL=redis://localhost:6379
